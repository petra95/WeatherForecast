<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.p92rdi.extendedweathertitan.activity.ForecastActivity"
    tools:showIn="@layout/app_bar_forecast">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/picture2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCity"
            style="@style/cityTextView5Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:maxLines="3"
            android:paddingTop="30dp"
            android:scrollbars="vertical"
            android:text="Budapest" />

        <TextView
            style="@style/gpsTextViewTheme"
            android:layout_weight="0.2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tvGPS_LON"
                style="@style/gpsCoordinatesTextViewTheme"
                android:layout_weight="0.3"
                android:text="42141543" />

            <TextView
                android:id="@+id/tvGPS_LAT"
                style="@style/gpsCoordinatesTextViewTheme"
                android:layout_weight="0.3"
                android:text="42141543" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:paddingTop="8dp"
            android:text="The expected weather:"
            android:textColor="@color/textColor"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_forecast"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.78">

    </ListView>
</LinearLayout>

