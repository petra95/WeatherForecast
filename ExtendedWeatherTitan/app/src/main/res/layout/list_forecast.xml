<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorListBackground"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingTop="4dp"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.21"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nightImageView"
            style="@style/imageIconsTheme" />

        <TextView
            android:id="@+id/nightDegTextView5"
            style="@style/fiveDaysDegTextView" />

        <TextView
            android:id="@+id/dayDegTextView5"
            style="@style/fiveDaysDegTextView" />

        <ImageView
            android:id="@+id/dayImageView"
            style="@style/imageIconsTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNightDescription"
            style="@style/fiveDaysDescTextView" />

        <TextView
            android:id="@+id/tvDayDescription"
            style="@style/fiveDaysDescTextView" />
    </LinearLayout>
</LinearLayout>